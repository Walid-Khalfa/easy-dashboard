{
  "openapi": "3.0.3",
  "info": {
    "title": "Easy-Dashboard API",
    "description": "Professional CRM API with RBAC - Authentication, Leads, Clients, Products, and Admin management",
    "version": "2.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@easy-dashboard.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    },
    {
      "url": "https://api.easy-dashboard.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from /api/auth/login"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "token",
        "description": "httpOnly cookie containing JWT token"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "message": { "type": "string" }
        }
      },
      "PaginatedResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "array", "items": { "type": "object" } },
          "pagination": {
            "type": "object",
            "properties": {
              "page": { "type": "integer" },
              "pages": { "type": "integer" },
              "count": { "type": "integer" },
              "limit": { "type": "integer" }
            }
          }
        }
      },
      "Lead": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "date": { "type": "string" },
          "client": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "budget": { "type": "number" },
          "request": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "contacted", "qualified", "converted", "lost"]
          },
          "removed": { "type": "boolean" },
          "enabled": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "Client": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "company": { "type": "string" },
          "name": { "type": "string" },
          "surname": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "address": { "type": "string" },
          "country": { "type": "string" },
          "removed": { "type": "boolean" },
          "enabled": { "type": "boolean" },
          "created": { "type": "string", "format": "date-time" }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "productName": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" },
          "status": { "type": "string" },
          "removed": { "type": "boolean" },
          "enabled": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "Admin": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "name": { "type": "string" },
          "surname": { "type": "string" },
          "role": { "type": "string", "enum": ["admin", "staff"] },
          "enabled": { "type": "boolean" }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }, { "cookieAuth": [] }],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check - Basic liveness",
        "description": "Returns basic health status. Used by load balancers to check if the service is running.",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "status": { "type": "string" },
                    "timestamp": { "type": "string" },
                    "uptime": { "type": "number" },
                    "environment": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health/ready": {
      "get": {
        "summary": "Readiness check",
        "description": "Returns readiness status including database connectivity. Used before routing traffic to this instance.",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "Service is ready to accept traffic"
          },
          "503": {
            "description": "Service is not ready (e.g., database disconnected)"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "User login",
        "description": "Authenticate user and receive JWT tokens in httpOnly cookies",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 }
                }
              },
              "example": {
                "email": "admin@example.com",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "headers": {
              "Set-Cookie": {
                "description": "JWT tokens set as httpOnly cookies"
              }
            }
          },
          "401": {
            "description": "Invalid credentials or account locked"
          },
          "429": {
            "description": "Too many login attempts - rate limited"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "User logout",
        "description": "Invalidate tokens by adding to blocklist and clearing cookies",
        "tags": ["Authentication"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Logout successful"
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "summary": "Refresh access token",
        "description": "Exchange refresh token for new access token",
        "tags": ["Authentication"],
        "responses": {
          "200": {
            "description": "New access token issued"
          },
          "401": {
            "description": "Invalid or expired refresh token"
          }
        }
      }
    },
    "/api/lead/list": {
      "get": {
        "summary": "List leads",
        "description": "Retrieve paginated list of leads. Requires lead:list permission.",
        "tags": ["Leads"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "items", "in": "query", "schema": { "type": "integer", "default": 10 } },
          { "name": "sort", "in": "query", "schema": { "type": "string", "example": "created:-1" } }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PaginatedResponse" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden - insufficient permission" }
        }
      }
    },
    "/api/lead/create": {
      "post": {
        "summary": "Create lead",
        "description": "Create a new lead. Requires lead:create permission.",
        "tags": ["Leads"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["date", "client", "phone", "email"],
                "properties": {
                  "date": { "type": "string" },
                  "client": { "type": "string" },
                  "phone": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "budget": { "type": "number" },
                  "request": { "type": "string" },
                  "status": {
                    "type": "string",
                    "enum": ["pending", "contacted", "qualified", "converted", "lost"],
                    "default": "pending"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Lead created" },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/lead/read/{id}": {
      "get": {
        "summary": "Get lead by ID",
        "description": "Retrieve a single lead by ID. Requires lead:read permission.",
        "tags": ["Leads"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Lead" } } }
          },
          "404": { "description": "Lead not found" }
        }
      }
    },
    "/api/lead/update/{id}": {
      "patch": {
        "summary": "Update lead",
        "description": "Update an existing lead. Requires lead:update permission.",
        "tags": ["Leads"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "client": { "type": "string" },
                  "phone": { "type": "string" },
                  "email": { "type": "string" },
                  "budget": { "type": "number" },
                  "status": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Lead updated" },
          "404": { "description": "Lead not found" }
        }
      }
    },
    "/api/lead/delete/{id}": {
      "delete": {
        "summary": "Delete lead",
        "description": "Soft delete a lead (marks as removed). Requires lead:delete permission (ADMIN only).",
        "tags": ["Leads"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Lead deleted" },
          "403": { "description": "Forbidden - staff cannot delete" }
        }
      }
    },
    "/api/lead/search": {
      "get": {
        "summary": "Search leads",
        "description": "Search leads by query string. Requires lead:search permission.",
        "tags": ["Leads"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "q", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": { "description": "Search results" }
        }
      }
    },
    "/api/client/list": {
      "get": {
        "summary": "List clients",
        "description": "Retrieve paginated list of clients. Requires client:list permission.",
        "tags": ["Clients"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "items", "in": "query", "schema": { "type": "integer", "default": 10 } }
        ],
        "responses": {
          "200": { "description": "Success" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/client/create": {
      "post": {
        "summary": "Create client",
        "description": "Create a new client. Requires client:create permission.",
        "tags": ["Clients"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["company", "name", "surname", "phone"],
                "properties": {
                  "company": { "type": "string" },
                  "name": { "type": "string" },
                  "surname": { "type": "string" },
                  "phone": { "type": "string" },
                  "email": { "type": "string" },
                  "address": { "type": "string" },
                  "country": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Client created" }
        }
      }
    },
    "/api/product/list": {
      "get": {
        "summary": "List products",
        "description": "Retrieve paginated list of products. Requires product:list permission.",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Success" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/admin/list": {
      "get": {
        "summary": "List admins",
        "description": "Retrieve paginated list of admin users. Requires admin:list permission (ADMIN only).",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Success" },
          "403": { "description": "Forbidden - staff access denied" }
        }
      }
    },
    "/api/admin/create": {
      "post": {
        "summary": "Create admin",
        "description": "Create a new admin user. Requires admin:create permission (ADMIN only).",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "name", "surname"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 },
                  "name": { "type": "string" },
                  "surname": { "type": "string" },
                  "role": { "type": "string", "enum": ["admin", "staff"] }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Admin created" },
          "403": { "description": "Forbidden" }
        }
      }
    },
    "/api/admin/delete/{id}": {
      "delete": {
        "summary": "Delete admin",
        "description": "Delete an admin user. Requires admin:delete permission (ADMIN only).",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Admin deleted" },
          "403": { "description": "Forbidden" }
        }
      }
    }
  },
  "tags": [
    { "name": "Health", "description": "Health check endpoints" },
    { "name": "Authentication", "description": "Login, logout, token refresh" },
    { "name": "Leads", "description": "Lead management" },
    { "name": "Clients", "description": "Client/Customer management" },
    { "name": "Products", "description": "Product management" },
    { "name": "Admin", "description": "Admin user management" }
  ]
}
