#rename this file from .env.example to .variables.env and fill in your values

# Environment
NODE_ENV=development

# Database - MongoDB connection string
DATABASE=mongodb://localhost:27017/easy-dashboard
PORT=8000

# Session secrets - CHANGE IN PRODUCTION
SECRET=change-this-to-random-secret-at-least-32-chars
KEY=change-this-to-random-key

# JWT secrets - MUST BE 32+ CHARACTERS IN PRODUCTION
JWT_SCHEME=jwt
JWT_TOKEN_PREFIX=Bearer
JWT_SECRET=your-jwt-access-secret-min-32-characters
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-characters
JWT_TOKEN_EXPIRATION=18000000
JWT_TOKEN_HASH_ALGO=SHA-256

# Redis (optional - for token blocklist in production)
# If not provided, in-memory blocklist will be used
# REDIS_URL=redis://localhost:6379

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
